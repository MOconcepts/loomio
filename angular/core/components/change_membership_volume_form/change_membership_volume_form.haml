.change-volume-form
  .lmo-disabled-form{ng-show: "isDisabled"}
  %form{ng-submit: "submit()"}
    .modal-header
      %modal_header_cancel_button
      %h1.lmo-h1{translate: "group_volume_form.header", translate-value-name: "{{groupName}}"}
    .modal-body
      %ul.change-volume-form__list
        %li.change-volume-form__option{ng-repeat: "level in volumeLevels"}
          %input.change-volume-form__input{id: "volume-{{level}}", type: "radio", ng-model: "membership.volume", name: "volume", value: "{{level}}"}
          %label.change-volume-form__label{for: "volume-{{level}}"}
            %strong{translate: "group_volume_form.{{level}}_label"}
            %p.change-volume-form__description{translate: "group_volume_form.{{level}}_description"}
      %input.change_volume_form__all-groups#apply-to-all-groups{type: "checkbox", ng-model: "applyToAllThreads"}
      %label.change_volume_form__all-groups-label{for: "apply-to-all-groups", translate: "group_volume_form.apply_to_all_groups"}
    .modal-footer
      %a.change-volume-form__help{href: "https://loomio.gitbooks.io/manual/content/en/keeping_up_to_date.html", translate: "group_volume_form.help", target: "_blank"}
      %button.change-volume-form__submit{type: "submit", ng-disabled: "isDisabled", translate: "common.action.update"}
      %button.change-volume-form__cancel{type: "button", translate: "common.action.cancel", ng-click: "$close()"}
